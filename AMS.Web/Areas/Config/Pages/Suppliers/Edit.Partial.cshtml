@model Supplier
@{
    var editMode = Model?.Id != null;
}

<div class="row">
    <div class="col-md">
        <form method="post">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md">
                            <div class="form-group">
                                <label>Name</label>
                                <input asp-for="Name" type="text" required class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
@*                        <div class="col-md ms-2">
                            <div class="form-group">
                                <label>Barcode</label>
                                <input asp-for="Asset.Barcode" type="text" required class="form-control" />
                                <span asp-validation-for="Asset.Barcode" class="text-danger"></span>
                            </div>
                        </div>*@
                    </div>
                    <div class="row mt-2">
                        <div class="col-md">
                            <div class="form-group">
                                <label>Phone</label>                          
                                <input asp-for="Phone" type="text" required class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                                
                            </div>
                        </div>
                        <div class="col-md ms-2">
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email" type="text" required class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md">
                            <div class="form-group">
                                <label>Address</label>                          
                                <input asp-for="Address" type="text" required class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                    <div class="row mb-2 mt-2">
                        <label class="col-md-3">Activate supplier?</label>
                        <div class="col-md-9">
                            <input asp-for="Status" type="checkbox" checked />
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success"><i class="fa fa-save"></i>&nbsp;Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
