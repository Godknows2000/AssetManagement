@page "{id}"
@model DetailsModel

@section sidebar{

}

<div class="card">
    <div class="card-body">
        <div>
            <label class="form-label">Name</label>
            <div>@Model.Supplier.Name</div>
        </div>
        <div class="row">
            <div class="col">
                <div class="mt-3">
                    <label class="form-label">Phone</label>
                    <div>@Model.Supplier.Phone</div>
                </div>
            </div>
            <div class="col">
                <div class="mt-3">
                    <label class="form-label">Email</label>
                    <div>@Model.Supplier.Email</div>
                </div>
            </div>
        </div>
        <div>
            <label class="form-label">Address</label>
            <div>@Model.Supplier.Address</div>
        </div>
        <div class="mt-2">
            <label class="form-label">Status</label>
            <div class=""><span class="badge bg-@(Model.Supplier.Status ?"success":"danger")"><i class="fa-solid fa-@(Model.Supplier.Status?"check":"times")"></i> @(Model.Supplier.Status ? "Active" : "Deactivated")</span></div>
        </div>
    </div>
    <div class="card-footer">
        <div class="mt-3 text-start">
            <label class="form-label">Creation date</label>
            <div>@Model.Supplier.CreationDate</div>
        </div>
    </div>
</div>
